{
  "manifest_version": 3,
  "name": "YouTube Volume Control for Touch Devices",
  "version": "1.4.5",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "css": [
        "content.css"
      ],
      "run_at": "document_end",
      "matches": [
        "https://www.youtube.com/*"
      ]
    },
    {
      "js": [
        "content.js"
      ],
      "run_at": "document_end",
      "matches": [
        "https://www.youtube.com/*"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "inject.js",
        "common.js",
        "settings.js",
        "progress.js"
      ],
      "matches": [
        "https://www.youtube.com/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "popup.html",
    "open_in_tab": true
  },
  "permissions": [
    "storage"
  ]
}